{
    "name": "cc/opl",
    "description": "An OPL Drupal",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Donna Benjamin",
            "role": "me@kattekrab.net"
        },
        {
            "name": "Peter Lieverdink",
            "role": "me@cafuego.net"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8",
            "exclude": ["drupal/markdown"]
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "drupal/markdown",
                "type": "drupal-module",
                "version": "dev-1.x",
                "source": {
                    "type": "git",
                    "url": "https://git.drupalcode.org/issue/markdown-3103679",
                    "reference": "6e951bd4f71d69e65273b0ab514518cd23a120d4"
                }
            }
         }
    ],
    "require": {
        "php": ">=8.1",
        "composer/installers": "^1.10",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/auto_entitylabel": "^3.0",
        "drupal/core": "^9",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-recommended": "^9",
        "drupal/ctools": "^3.2",
        "drupal/diff": "^1.0",
        "drupal/flag": "^4.0@beta",
        "drupal/markdown": "dev-1.x",
        "drupal/migrate_plus": "^5.1",
        "drupal/migrate_tools": "^5.0",
        "drupal/pathauto": "^1.8",
        "drupal/token": "^1.7",
        "drush/drush": "^10.5",
        "league/commonmark": "^1.0",
        "oomphinc/composer-installers-extender": "^2.0",
        "symfony/flex": "^1.10"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/devel": "^4.0",
        "phpmd/phpmd": "^2.6"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
    "bin-dir": "vendor/bin/",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true,
            "symfony/flex": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "@drupal-scaffold"
        ],
        "post-update-cmd": [
            "@drupal-scaffold"
        ]
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches-file": "composer.patches.json",
        "installer-paths": {
            "html/core": ["type:drupal-core"],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "html/modules/contrib/{$name}": ["type:drupal-module"],
            "html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/sites/default/services.yml": {
                    "mode": "replace",
                    "path": "html/core/assets/scaffold/files/default.services.yml",
                    "overwrite": false
                },
                "[web-root]/sites/default/settings.php": {
                    "mode": "replace",
                    "path": "html/core/assets/scaffold/files/default.settings.php",
                    "overwrite": false
                }
            },
            "locations": {
                "web-root": "html/"
            }
        },
        "merge-plugin": {
            "include": [
                "html/core/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-extra": false
        }
    }
}
